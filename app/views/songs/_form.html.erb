<%= form_with(model: song, local: true) do |form| %>
  <% if song.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(song.errors.count, "error") %> prohibited this song from being saved:</h2>

      <ul>
      <% song.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, id: :song_name %>
  </div>

  <div class="field">
    <%= form.label :youtube_url %>
    <%= form.text_field :youtube_url, id: :song_youtube_url %>
  </div>

  <div class="field">
    <%= form.label :musician_id %>
    <%= collection_select(:song, :musician_id, Musician.all, :id, :name, { prompt: true}, { class: "browser-default" }) %>
  </div>

  <h3>Bookmarks</h3>
  <%= form.fields_for :bookmarks do |form_bookmark| %>
    <div class="field">
      <%= form_bookmark.label :title %>
      <%= form_bookmark.text_field :title, id: :bookmark_title %>
    </div>
    <div class="field">
      <%= form_bookmark.label :seconds %>
      <%= form_bookmark.number_field :seconds, id: :bookmark_seconds %>
    </div>
    <hr />
  <% end %>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
